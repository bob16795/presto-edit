bind <C-P> split h
bind <C-I> split v
bind <C-T> split t
bind <C-O> open
bind <C-Q> q

auto filetype md hi bg #000000

hi act1 #3b4252
hi act2 #d8dee9
hi act3 #3b4252
hi ina1 #4c566a
hi ina2 #e5e9f0
hi ina3 #3b4252
hi grn #98971a
hi bg #2e3440
hi fg #eceff4

hi line %act1
hi lineNumberSplit %ina3
hi lineNumberFg %ina2
hi lineNumberBg %ina1
hi cursor %act2
hi statusFg %act2
hi statusBg %act1

hi split %ina2
